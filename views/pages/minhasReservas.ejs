<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Minhas Reservas - Inteli</title>
    <link rel="stylesheet" href="/css/styles.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css"
    />
  </head>
  <body>
    <div class="container mt-4">
      <div class="row mb-4">
        <div class="col">
          <h1 class="text-center">Minhas Reservas</h1>
        </div>
      </div>

      <!-- Filtros -->
      <div class="row mb-4">
        <div class="col-md-4">
          <div class="input-group">
            <span class="input-group-text"><i class="bi bi-search"></i></span>
            <input
              type="text"
              class="form-control"
              placeholder="Buscar reserva..."
            />
          </div>
        </div>
        <div class="col-md-4">
          <select class="form-select">
            <option value="">Status</option>
            <option value="ativa">Ativa</option>
            <option value="concluida">Concluída</option>
            <option value="cancelada">Cancelada</option>
          </select>
        </div>
        <div class="col-md-4">
          <select class="form-select">
            <option value="">Ordenar por</option>
            <option value="data">Data</option>
            <option value="sala">Sala</option>
            <option value="status">Status</option>
          </select>
        </div>
      </div>

      <!-- Lista de Reservas -->
      <div class="row">
        <div class="col">
          <div class="card mb-3">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <h5 class="card-title">Sala de Reunião 1</h5>
                  <p class="card-text">
                    <i class="bi bi-calendar"></i> 15/03/2024<br />
                    <i class="bi bi-clock"></i> 14:00 - 15:00<br />
                    <span class="badge bg-success">Ativa</span>
                  </p>
                </div>
                <div>
                  <button class="btn btn-outline-primary me-2">
                    <i class="bi bi-pencil"></i> Editar
                  </button>
                  <button class="btn btn-outline-danger">
                    <i class="bi bi-trash"></i> Cancelar
                  </button>
                </div>
              </div>
            </div>
          </div>

          <div class="card mb-3">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <h5 class="card-title">Auditório Principal</h5>
                  <p class="card-text">
                    <i class="bi bi-calendar"></i> 16/03/2024<br />
                    <i class="bi bi-clock"></i> 10:00 - 12:00<br />
                    <span class="badge bg-secondary">Concluída</span>
                  </p>
                </div>
                <div>
                  <button class="btn btn-outline-primary me-2" disabled>
                    <i class="bi bi-pencil"></i> Editar
                  </button>
                  <button class="btn btn-outline-danger" disabled>
                    <i class="bi bi-trash"></i> Cancelar
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Botão Nova Reserva -->
      <div class="row mt-4">
        <div class="col text-center">
          <a href="/reservaPage" class="btn btn-primary btn-lg">
            <i class="bi bi-plus-circle"></i> Nova Reserva
          </a>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
